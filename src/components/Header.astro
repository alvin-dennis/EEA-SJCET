---
import { SheetComponent } from "@/components/Sheet"
import { navigation } from '@/lib/constants'
import ThemeToggle from './ThemeToggle.astro'
---

<header class="fixed w-full z-40 transition-all duration-300 text-white" id="header">
  <nav class="container mx-auto px-6 py-3">
    <div class="flex justify-between items-center">
      <a href="#" class="text-2xl font-bold text-white transition-colors">NexTech</a>
      <div class="hidden md:flex space-x-6">
        {navigation.map((item) => (
          <a 
            href={item.href} 
            class="text-white  transition-colors relative hover-box"
          >
            {item.name}
          </a>
        ))}
      </div>
      <div class="flex items-center space-x-4">
        <SheetComponent client:load/>
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>

<style>
  .hover-box {
  position: relative;
}

.hover-box::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -4px; 
  width: 0;
  height: 2px;
  background-color: #1e40af;
  transition: width 0.3s ease;
}

.hover-box:hover::after {
  width: 100%;
}
</style>

<script>
  const header = document.getElementById('header');
  const logo = header?.querySelector('a.text-2xl');
  const navLinks = header?.querySelectorAll('.hidden.md\\:flex a');

  if (header && logo && navLinks) {
    const updateHeaderStyle = () => {
      if (window.scrollY > 50) {
        header.classList.add('bg-white', 'dark:bg-gray-800', 'shadow-lg');
        header.classList.remove('text-white');
        header.classList.add('text-gray-900', 'dark:text-white');
        logo.classList.remove('text-white');
        logo.classList.add('text-blue-600');
        navLinks.forEach(link => {
          link.classList.remove('text-white');
          link.classList.add('text-gray-900', 'dark:text-white');
        });
      } else {
        header.classList.remove('bg-white', 'dark:bg-gray-800', 'shadow-lg');
        header.classList.remove('text-gray-900', 'dark:text-white');
        header.classList.add('text-white');
        logo.classList.remove('text-blue-600');
        logo.classList.add('text-white');
        navLinks.forEach(link => {
          link.classList.remove('text-gray-900', 'dark:text-white');
          link.classList.add('text-white');
        });
      }
    };
    
    updateHeaderStyle();
    window.addEventListener('scroll', updateHeaderStyle);
  }
</script>

