---
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'
import { eventsData } from '@/lib/constants'
---

<section id="projects" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold mb-12 text-center text-gray-900 dark:text-white">Events</h2>
    <div class="carousel overflow-hidden relative">
      <div class="carousel-track flex animate-scroll">
        {[...eventsData, ...eventsData].map((event, index) => (
          <Card key={index} className="bg-white dark:bg-gray-800 shrink-0 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4">
            <CardHeader>
              <img
                src={event.image}
                alt={event.title}
                class="w-full h-64 object-cover rounded-t-lg"
              />
            </CardHeader>
            <CardContent>
              <CardTitle className="text-xl font-semibold mt-4 text-gray-900 dark:text-white">
                {event.title}
              </CardTitle>
              <p class="text-gray-600 dark:text-gray-300 mt-2">{event.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .carousel {
    width: 100%;
  }

  .carousel-track {
    display: flex;
    gap: 1rem;
  }

  .carousel-track .Card {
    shrink: 0;
    width: 100%; 
  }

  @media (min-width: 640px) {
    .carousel-track .Card {
      width: calc(50% - 1rem); 
    }
  }

  @media (min-width: 768px) {
    .carousel-track .Card {
      width: calc(33.33% - 1rem);
    }
  }

  @media (min-width: 1024px) {
    .carousel-track .Card {
      width: calc(25% - 1rem); 
    }
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .animate-scroll {
    animation: scroll 15s linear infinite;
  }
</style>
