---
import { Card, CardContent } from '@/components/ui/card'
import { aboutData } from '@/lib/constants'
---

<section id="about" class="py-20 bg-white dark:bg-gray-700">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold mb-8 text-center dark:text-white">{aboutData.title}</h2>
    <div class="flex flex-col md:flex-row items-center justify-between">
      <div class="md:w-1/2 mb-8 md:mb-0">
        <img src={aboutData.image} alt="About NexTech" class="rounded-lg shadow-lg" />
      </div>
      <div class="md:w-1/2 md:pl-10">
        {aboutData.content.map((paragraph) => (
          <p class="text-lg mb-4 dark:text-gray-300">{paragraph}</p>
        ))}
      </div>
    </div>
  </div>
</section>

